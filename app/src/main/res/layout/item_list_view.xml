<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/txtJudul"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Terpopuler Minggu Ini"
        android:textColor="@color/hitam"
        />

    <TextView
        android:id="@+id/txtKeterangan"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toBottomOf="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="8 Outlet, Disimpan 15118 kali"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/txtDetail"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toBottomOf="@+id/txtKeterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Restoran terpopuler di kotamu minggu ini"
        android:textColor="@color/hitam"
        android:textSize="12sp"
        />

</android.support.constraint.ConstraintLayout>